<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-md border-b border-brand-neutral-200 shadow-subtle">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <a
          href="/"
          class="text-2xl font-bold text-brand-primary hover:text-brand-primary-hover transition-colors duration-200"
        >
          HomeWare
        </a>
      </div>
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a
          href="/"
          class="text-text-secondary hover:text-brand-primary text-base font-medium transition-colors duration-200"
        >
          Home
        </a>
        <a
          href="/about"
          class="text-text-secondary hover:text-brand-primary text-base font-medium transition-colors duration-200"
        >
          About
        </a>
        <a
          href="/contact"
          class="text-text-secondary hover:text-brand-primary text-base font-medium transition-colors duration-200"
        >
          Contact
        </a>
        <%= if @current_user do %>
          <a
            href="/orders"
            class="text-text-secondary hover:text-brand-primary text-base font-medium transition-colors duration-200"
          >
            My Orders
          </a>
          <a
            href="/chat"
            class="text-text-secondary hover:text-brand-primary text-base font-medium transition-colors duration-200"
          >
            Support
          </a>
          <form action="/users/log_out" method="post" class="inline">
            <input type="hidden" name="_method" value="delete" />
            <input type="hidden" name="_csrf_token" value={Phoenix.Controller.get_csrf_token()} />
            <button
              type="submit"
              class="text-text-secondary hover:text-brand-primary text-base font-medium transition-colors duration-200"
            >
              Sign Out
            </button>
          </form>
        <% else %>
          <a
            href="/users/log_in"
            class="text-text-secondary hover:text-brand-primary text-base font-medium transition-colors duration-200"
          >
            Sign In
          </a>
          <a
            href="/signup"
            class="bg-brand-primary hover:bg-brand-primary-hover text-white px-4 py-2 rounded-md text-base font-medium transition-colors duration-200"
          >
            Sign Up
          </a>
        <% end %>
      </div>
      <!-- Desktop Icons -->
      <div class="hidden md:flex items-center space-x-4">
        <!-- Wishlist -->
        <.link
          navigate={~p"/wishlist"}
          class="text-brand-neutral-400 hover:text-brand-primary transition-colors duration-200 relative p-2"
          aria-label="Wishlist"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
            />
          </svg>
          <span class="absolute -top-1 -right-1 w-5 h-5 bg-brand-accent text-white text-xs rounded-full flex items-center justify-center font-medium">
            <%= @wishlist_count %>
          </span>
        </.link>
        <!-- Cart -->
        <.link
          navigate={~p"/checkout"}
          class="text-brand-neutral-400 hover:text-brand-primary transition-colors duration-200 relative p-2"
          aria-label="Shopping Cart"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m6-5v6a2 2 0 01-2 2H9a2 2 0 01-2-2v-6m8 0V9a2 2 0 00-2-2H9a2 2 0 00-2 2v4.01"
            />
          </svg>
          <span class="absolute -top-1 -right-1 w-5 h-5 bg-brand-primary text-white text-xs rounded-full flex items-center justify-center font-medium">
            <%= @cart_count %>
          </span>
        </.link>
        <!-- User Account -->
        <%= if @current_user do %>
          <a
            href="/profile"
            class="text-brand-neutral-400 hover:text-brand-primary transition-colors duration-200 p-2"
            title="Profile"
            aria-label="User Profile"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
              />
            </svg>
          </a>
        <% else %>
          <a
            href="/users/log_in"
            class="text-brand-neutral-400 hover:text-brand-primary transition-colors duration-200 p-2"
            title="Sign In"
            aria-label="Sign In"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
              />
            </svg>
          </a>
        <% end %>
      </div>
      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button
          class="text-brand-neutral-400 hover:text-brand-primary transition-colors duration-200 p-2 rounded-md hover:bg-brand-neutral-50 focus:outline-none focus:ring-2 focus:ring-brand-primary/20"
          id="mobile-menu-button"
          aria-label="Toggle mobile menu"
          aria-expanded="false"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>
      </div>
    </div>
    <!-- Mobile Menu -->
    <div class="md:hidden hidden transition-all duration-300 ease-in-out" id="mobile-menu">
      <div class="px-4 pt-2 pb-4 space-y-2 bg-white rounded-lg mt-2 border border-brand-neutral-200 shadow-card">
        <a
          href="/"
          class="block px-3 py-2 text-text-secondary hover:text-brand-primary hover:bg-brand-neutral-50 rounded-md transition-colors duration-200 text-sm font-medium"
        >
          Home
        </a>
        <a
          href="/about"
          class="block px-3 py-2 text-text-secondary hover:text-brand-primary hover:bg-brand-neutral-50 rounded-md transition-colors duration-200 text-sm font-medium"
        >
          About
        </a>
        <a
          href="/contact"
          class="block px-3 py-2 text-text-secondary hover:text-brand-primary hover:bg-brand-neutral-50 rounded-md transition-colors duration-200 text-sm font-medium"
        >
          Contact
        </a>
        <%= if @current_user do %>
          <a
            href="/orders"
            class="block px-3 py-2 text-text-secondary hover:text-brand-primary hover:bg-brand-neutral-50 rounded-md transition-colors duration-200 text-sm font-medium"
          >
            My Orders
          </a>
          <a
            href="/chat"
            class="block px-3 py-2 text-text-secondary hover:text-brand-primary hover:bg-brand-neutral-50 rounded-md transition-colors duration-200 text-sm font-medium"
          >
            Support
          </a>
          <form action="/users/log_out" method="post" class="inline">
            <input type="hidden" name="_method" value="delete" />
            <input type="hidden" name="_csrf_token" value={Phoenix.Controller.get_csrf_token()} />
            <button
              type="submit"
              class="block w-full text-left px-3 py-2 text-text-secondary hover:text-brand-primary hover:bg-brand-neutral-50 rounded-md transition-colors duration-200 text-sm font-medium"
            >
              Sign Out
            </button>
          </form>
        <% else %>
          <a
            href="/users/log_in"
            class="block px-3 py-2 text-text-secondary hover:text-brand-primary hover:bg-brand-neutral-50 rounded-md transition-colors duration-200 text-sm font-medium"
          >
            Sign In
          </a>
          <a
            href="/signup"
            class="block px-3 py-2 bg-brand-primary hover:bg-brand-primary-hover text-white rounded-md transition-colors duration-200 text-sm font-medium text-center"
          >
            Sign Up
          </a>
        <% end %>
        <!-- Mobile Icons -->
        <div class="flex items-center justify-around pt-4 border-t border-brand-neutral-200">
          <.link
            navigate={~p"/wishlist"}
            class="text-brand-neutral-400 hover:text-brand-primary transition-colors duration-200 p-2 relative"
            aria-label="Wishlist"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
              />
            </svg>
            <span class="absolute -top-1 -right-1 w-4 h-4 bg-brand-accent text-white text-xs rounded-full flex items-center justify-center font-medium">
              <%= @wishlist_count %>
            </span>
          </.link>

          <.link
            navigate={~p"/checkout"}
            class="text-brand-neutral-400 hover:text-brand-primary transition-colors duration-200 p-2 relative"
            aria-label="Shopping Cart"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m6-5v6a2 2 0 01-2 2H9a2 2 0 01-2-2v-6m8 0V9a2 2 0 00-2-2H9a2 2 0 00-2 2v4.01"
              />
            </svg>
            <span class="absolute -top-1 -right-1 w-4 h-4 bg-brand-primary text-white text-xs rounded-full flex items-center justify-center font-medium">
              <%= @cart_count %>
            </span>
          </.link>

          <%= if @current_user do %>
            <a
              href="/profile"
              class="text-brand-neutral-400 hover:text-brand-primary transition-colors duration-200 p-2"
              title="Profile"
              aria-label="User Profile"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                />
              </svg>
            </a>
          <% else %>
            <a
              href="/users/log_in"
              class="text-brand-neutral-400 hover:text-brand-primary transition-colors duration-200 p-2"
              title="Sign In"
              aria-label="Sign In"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                />
              </svg>
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</header>

<main class="flex-1 w-full mx-auto bg-brand-neutral-50 min-h-screen">
  <.flash_group flash={@flash} />
  <%= @inner_content %>
</main>
