  </section>
  <!-- Newsletter Signup -->
  <section class="py-16 px-4 sm:px-6 lg:px-8 bg-white">
    <div class="max-w-2xl mx-auto text-center">
      <h2 class="text-3xl font-bold mb-4 text-text-primary">
        Stay Updated
      </h2>
      <p class="text-text-secondary mb-8 text-lg">
        Get the latest products and exclusive offers delivered to your inbox.
      </p>
      <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
        <input
          type="email"
          placeholder="Enter your email"
          class="flex-1 px-4 py-3 bg-white border border-brand-neutral-300 rounded-md text-text-primary placeholder-brand-neutral-400 focus:border-brand-primary focus:ring-2 focus:ring-brand-primary/20 focus:outline-none"
        />
        <button
          type="submit"
          class="px-6 py-3 bg-brand-primary hover:bg-brand-primary-hover text-white font-semibold rounded-md transition-colors duration-200"
        >
          Subscribe
        </button>
      </form>
    </div>
  </section>
</div>
